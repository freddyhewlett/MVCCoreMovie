<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC Movies (Core)</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <nav class="navbar navbar-inverse" style="border:0px;">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="\"><img src="~/Images/filmstripe.jpg" width="100" /></a>
                        </div>
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Movies", "Index", "Movie")</li>
                            <li>@Html.ActionLink("Genre", "Index", "Genre")</li>
                        </ul>
                        @*@{await Component.InvokeAsync("GenreMenuViewComponent");}*@
                        @*@model IEnumerable<Domain.Models.Genre>*@
                        <partial name="_LoginPartial" />
                    </div>
                    @*@{await Component.InvokeAsync("GenreMenuViewComponent");}*@
                </nav>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <p>&copy; @DateTime.Now.Year - Cybertron - Time Só Vamu!</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

